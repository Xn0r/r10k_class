{
  "builders": [
{
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/provision/centos-65-ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 8192,
      "guest_os_type": "RedHat_64",
      "http_directory": "provision",
      "hard_drive_interface": "sata",
      "iso_checksum": "f21a71e8e31df73297bdd1ccd4a64a36831284bd",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirrors.kernel.org/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
      "output_directory": "packer-centos-6.5-x86_64-virtualbox",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-centos-6.5-x86_64"
    },
    {
      "type": "amazon-ebs",
      "region": "us-west-2",
      "source_ami": "ami-b6bdde86",
      "instance_type": "t1.micro",
      "ssh_username": "root",
      "ami_name": "packer {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provision/provision.sh"
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "provision/provision.pp",
      "module_paths": [
        "provision/modules"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true
    }
  ]
}